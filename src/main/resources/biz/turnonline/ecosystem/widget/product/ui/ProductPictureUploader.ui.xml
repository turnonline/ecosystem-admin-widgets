<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:a='urn:import:gwt.material.design.addins.client'
             xmlns:m='urn:import:gwt.material.design.client.ui'>

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <a:fileuploader.MaterialFileUploader ui:field="uploader" shadow="0" marginTop="10" marginBottom="0" height="220px" border="1px dashed #ccc">
            <a:fileuploader.MaterialUploadLabel title="{msg.tooltipPictures}"/>
        </a:fileuploader.MaterialFileUploader>
        <m:MaterialRow ui:field="images" marginLeft="-10" marginRight="-10" marginBottom="10"/>
    </g:HTMLPanel>


</ui:UiBinder>