<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ui2="urn:import:biz.turnonline.ecosystem.widget.product.ui"
             xmlns:ui3="urn:import:biz.turnonline.ecosystem.widget.shared.ui">

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m3">
                <m:MaterialSection paddingTop="0" paddingBottom="0">
                    <m:MaterialIcon iconType="MONETIZATION_ON" iconColor="BLUE" float="LEFT" marginRight="5"
                                    marginTop="-3"/>
                    <m:MaterialTitle description="{msg.labelPriceDefinition}" textColor="BLUE"/>
                </m:MaterialSection>

                <m:MaterialRow marginLeft="-10">
                    <m:MaterialDoubleBox ui:field="priceExclVat" label="{msg.labelPriceExclusiveVat}" grid="s12 m8"/>
                    <ui3:CurrencyComboBox ui:field="currency" label="{msg.labelCurrency}" grid="s12 m4"/>
                </m:MaterialRow>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m12">
                <m:MaterialSection paddingTop="0" paddingBottom="0" marginLeft="-5">
                    <m:MaterialIcon iconType="ATTACH_MONEY" iconColor="BLUE" float="LEFT" marginRight="0"
                                    marginTop="-3"/>
                    <m:MaterialTitle description="{msg.labelVatDefinition}" textColor="BLUE"/>
                </m:MaterialSection>

                <m:MaterialRow marginLeft="-10">
                    <ui3:VatRateComboBox ui:field="vat" label="{msg.labelVat}" grid="s12 m1"/>
                    <ui3:VatRateComboBox ui:field="vatEU" label="{msg.labelVatEU}" grid="s12 m1"/>
                    <ui3:VatRateComboBox ui:field="vatNonEU" label="{msg.labelVatNonEU}" grid="s12 m1"/>
                </m:MaterialRow>

                <m:MaterialRow marginLeft="-20" marginTop="-25">
                    <m:MaterialSwitch ui:field="domesticDelivery" onLabel="{msg.labelDomesticDelivery}" grid="s12 m12"/>
                </m:MaterialRow>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m12">
                <m:MaterialSection paddingTop="0" paddingBottom="0">
                    <m:MaterialIcon iconType="LOCAL_OFFER" iconColor="BLUE" float="LEFT" marginRight="5"
                                    marginTop="-3"/>
                    <m:MaterialTitle description="{msg.labelDiscounts}" textColor="BLUE"/>
                </m:MaterialSection>

                <ui2:Discounts ui:field="discounts"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>