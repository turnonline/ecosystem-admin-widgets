<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s="urn:import:biz.turnonline.ecosystem.widget.shared.ui"
             xmlns:a="urn:import:gwt.material.design.addins.client"
             xmlns:ui2="urn:import:biz.turnonline.ecosystem.widget.purchase.ui">

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m3">
                <!--logo-->
                <s:SectionTitle iconType="ADD_A_PHOTO" title="{msg.labelBillScan}"/>
                <ui2:BillUploader ui:field="billUploader" marginBottom="20"/>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m3">
                <s:SectionTitle iconType="CHROME_READER_MODE" title="{msg.labelDescription}"/>

                <m:MaterialColumn grid="m12" paddingLeft="0">
                    <m:MaterialTextBox ui:field="description" label="{msg.labelName}" paddingLeft="0"/>
                    <m:MaterialTextBox ui:field="billNumber" label="{msg.labelBillNumber}" paddingLeft="0"/>

                    <m:MaterialColumn grid="m12" paddingLeft="0" paddingRight="0">
                        <m:MaterialDoubleBox ui:field="totalPrice" label="{msg.labelTotalPrice}" paddingLeft="0" grid="m8"/>
                        <s:CurrencyComboBox ui:field="currency" label="{msg.labelCurrency}" paddingLeft="0" paddingRight="0" grid="m4"/>
                    </m:MaterialColumn>

                    <s:BillTypeComboBox ui:field="billType" label="{msg.labelBillType}" grid="m12" paddingLeft="0" paddingRight="0"/>
                    <m:MaterialDatePicker ui:field="dateOfIssue" placeholder="{msg.labelDateOfIssue}" grid="m8" paddingLeft="0"/>
                </m:MaterialColumn>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s12 m3">
                <s:SectionTitle iconType="ACCESS_TIME" title="{msg.labelChanges}"/>

                <m:MaterialDatePicker ui:field="created" grid="m8" placeholder="{msg.labelCreated}" paddingLeft="0"/>
                <m:MaterialDatePicker ui:field="modified" grid="m8" placeholder="{msg.labelModified}" paddingLeft="0"/>
            </m:MaterialColumn>
        </m:MaterialRow>

        <s:SectionTitle iconType="ATTACH_MONEY" title="{msg.labelVatRecapitulation}"/>
        <a:emptystate.MaterialEmptyState ui:field="emptyRecapitulation"/>
        <m:MaterialRow ui:field="standardRow">
            <m:MaterialColumn grid="s12 m9">
                <m:MaterialColumn grid="m12" paddingLeft="0" paddingRight="0">
                    <s:VatRateComboBox ui:field="standardVatRate" paddingLeft="0" grid="m2"/>
                    <m:MaterialDoubleBox ui:field="standardExclVat" label="{msg.labelPriceExcludingVat}" paddingLeft="0" grid="m3"/>
                    <m:MaterialDoubleBox ui:field="standardVatAmount" label="{msg.labelVatAmount}" paddingLeft="0" grid="m3"/>
                    <s:PriceTextBox ui:field="standardSum" label="{msg.labelSum}" paddingLeft="0" grid="m3"/>
                </m:MaterialColumn>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow ui:field="reducedRow">
            <m:MaterialColumn grid="s12 m9">
                <m:MaterialColumn grid="m12" paddingLeft="0" paddingRight="0">
                    <s:VatRateComboBox ui:field="reducedVatRate" paddingLeft="0" grid="m2"/>
                    <m:MaterialDoubleBox ui:field="reducedExclVat" label="{msg.labelPriceExcludingVat}" paddingLeft="0" grid="m3"/>
                    <m:MaterialDoubleBox ui:field="reducedVatAmount" label="{msg.labelVatAmount}" paddingLeft="0" grid="m3"/>
                    <s:PriceTextBox ui:field="reducedSum" label="{msg.labelSum}" paddingLeft="0" grid="m3"/>
                </m:MaterialColumn>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow ui:field="zeroRow">
            <m:MaterialColumn grid="s12 m9">
                <m:MaterialColumn grid="m12" paddingLeft="0" paddingRight="0">
                    <s:VatRateComboBox ui:field="zeroVatRate" paddingLeft="0" grid="m2"/>
                    <m:MaterialDoubleBox ui:field="zeroExclVat" label="{msg.labelPriceExcludingVat}" paddingLeft="0" grid="m3"/>
                </m:MaterialColumn>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow ui:field="sumRow" backgroundColor="BLUE_LIGHTEN_5" paddingTop="15">
            <m:MaterialColumn grid="s12 m9">
                <m:MaterialColumn grid="m12" paddingLeft="0" paddingRight="0">
                    <m:MaterialRow>
                        <g:Label ui:field="sum" text="{msg.labelTotalPrice}"/>
                    </m:MaterialRow>
                    <m:MaterialDoubleBox ui:field="sumTotalPriceExclVat" label="{msg.labelTotalPriceExclVat}" paddingLeft="0" grid="m3"/>
                    <m:MaterialDoubleBox ui:field="sumTotalVat" label="{msg.labelTotalVat}" paddingLeft="0" grid="m3"/>
                    <s:PriceTextBox ui:field="sumTotalPrice" label="{msg.labelSum}" fontWeight="BOLD" paddingLeft="0" grid="m3"/>
                </m:MaterialColumn>
            </m:MaterialColumn>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialColumn ui:field="itemsLabel" grid="m12" marginBottom="10">
                <s:SectionTitle iconType="LIST" title="{msg.labelItems}"/>
            </m:MaterialColumn>

            <m:MaterialColumn grid="m12">
                <m:MaterialLink ui:field="addItem"
                                shadow="0"
                                waves="DEFAULT"
                                text="{msg.labelAdd}"
                                type="OUTLINED"
                                iconType="ADD_CIRCLE"
                                backgroundColor="WHITE"
                                border="1px solid"
                                textColor="GREEN"/>

                <ui2:BillItems ui:field="items"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>