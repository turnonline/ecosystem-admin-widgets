<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:s='urn:import:biz.turnonline.ecosystem.widget.shared.ui'>

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <m:MaterialRow ui:field="content">
        <m:MaterialColumn grid="m12" marginLeft="10">
            <s:SectionTitle iconType="ALARM_ON" ui:field="currentMonthTitle" textColor="GREY"/>
        </m:MaterialColumn>
        <s:InfiniteScroll grid="s12 m12" ui:field="scrollCurrentMonth"/>

        <m:MaterialColumn grid="m12" marginLeft="10">
            <s:SectionTitle iconType="HISTORY" ui:field="lastMonthsTitle" textColor="GREY"/>
        </m:MaterialColumn>
        <s:InfiniteScroll grid="s12 m12" ui:field="scrollLastMonths"/>
    </m:MaterialRow>
</ui:UiBinder>