<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s="urn:import:biz.turnonline.ecosystem.widget.shared.ui">

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <s:ScaffoldBreadcrumb ui:field="breadcrumb"/>

        <m:MaterialRow paddingTop="20" paddingLeft="20" float="LEFT">
            <m:MaterialButton marginRight="10" type="FLAT" waves="DEFAULT" backgroundColor="BLUE" textColor="WHITE" iconType="CONTROL_POINT" tooltip="{msg.tooltipNewInvoice}" text="{msg.labelNew}" ui:field="btnNew"/>
        </m:MaterialRow>

        <m:MaterialRow padding="20">
            <s:SmartTable ui:field="table"/>
        </m:MaterialRow>

    </g:HTMLPanel>
</ui:UiBinder>