<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:s='urn:import:biz.turnonline.ecosystem.widget.shared.ui'
             xmlns:t="urn:import:gwt.material.design.client.ui.table"
>
    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <t:TableRow class="data-row">
        <t:TableData>
            <m:MaterialCheckBox ui:field="selected"/>
        </t:TableData>
        <t:TableData>
            <s:ProductAutoComplete ui:field="itemName"/>
        </t:TableData>
        <t:TableData>
            <m:MaterialDoubleBox ui:field="amount"/>
        </t:TableData>
        <t:TableData>
            <s:BillingUnitComboBox ui:field="unit"/>
        </t:TableData>
        <t:TableData>
            <m:MaterialDoubleBox ui:field="priceExclusiveVat"/>
        </t:TableData>
        <t:TableData>
            <s:CurrencyComboBox ui:field="currency"/>
        </t:TableData>
        <t:TableData>
            <s:VatRateComboBox ui:field="vat"/>
        </t:TableData>
    </t:TableRow>
</ui:UiBinder>