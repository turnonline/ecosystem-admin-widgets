<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.8//EN"
        "https://github.com/gwtproject/gwt/raw/2.8.1/distro-source/core/src/gwt-module.dtd">

<module rename-to="order.widget">
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="com.google.gwt.activity.Activity"/>

    <inherits name="org.ctoolkit.gwt.TinyGwt"/>
    <inherits name="dagger.Dagger"/>
    <inherits name="org.fusesource.restygwt.RestyGWT"/>

    <inherits name="gwt.material.design.GwtMaterialBasicWithJQuery"/>
    <inherits name="gwt.material.design.addins.GwtMaterialAddins" />
    <inherits name="gwt.material.design.GwtMaterialTable"/>
    <inherits name="gwt.material.design.themes.ThemeBlue"/>
    <inherits name="gwt.material.design.incubator.AddinsIncubator"/>

    <source path="shared"/>
    <source path="order"/>

    <!--TODO: maven profile to compile all permutations-->
    <set-property name="user.agent" value="safari"/>

    <entry-point class="biz.turnonline.ecosystem.widget.order.OrderEntryPoint"/>
</module>
