<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ui2="urn:import:biz.turnonline.ecosystem.widget.shared.ui">

    <ui:with field="msg" type="biz.turnonline.ecosystem.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <ui2:ScaffoldBreadcrumb ui:field="breadcrumb"/>

        <m:MaterialRow padding="20" paddingTop="10">
            <ui2:SmartTable ui:field="table"/>
        </m:MaterialRow>

        <m:MaterialFAB>
            <m:MaterialAnchorButton type="FLOATING" size="LARGE" backgroundColor="GREEN" ui:field="newContact"
                                    iconType="ADD" tooltipPosition="LEFT" tooltip="{msg.tooltipNewContact}"
                                    tooltipDelayMs="700"/>
        </m:MaterialFAB>

    </g:HTMLPanel>
</ui:UiBinder>