<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="msg" type="org.ctoolkit.turnonline.widget.shared.AppMessages"/>

    <g:HTMLPanel>
        <m:MaterialNavBar backgroundColor="GREY_LIGHTEN_5" shadow="0" paddingLeft="20">
            <m:MaterialBreadcrumb textColor="GREY_DARKEN_3" iconPosition="LEFT" iconType="HOME" text="Home"/>
            <m:MaterialBreadcrumb textColor="GREY_DARKEN_3" iconPosition="LEFT" text="Contacts"/>
            <m:MaterialBreadcrumb textColor="BLUE" iconPosition="LEFT" iconType="CONTACT_PHONE" text="Edit contact"/>
        </m:MaterialNavBar>

        <m:MaterialPanel shadow="1" marginLeft="20" marginRight="20" marginTop="20" paddingTop="5">
            <m:MaterialRow marginBottom="0" paddingTop="20">
                <m:MaterialSwitch onLabel="{msg.labelCompany}" grid="10" ui:field="company"/>
            </m:MaterialRow>

            <m:MaterialRow paddingLeft="10" paddingBottom="0" marginTop="0" marginBottom="0">
                <!--person-->
                <m:MaterialColumn grid="s12 m4">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="PERSON" iconColor="BLUE" float="LEFT" marginRight="5" marginTop="-3"/>
                        <m:MaterialTitle description="Person" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="{msg.labelFirstName}" ui:field="firstName"/>
                    <m:MaterialTextBox label="{msg.labelLastName}" ui:field="lastName"/>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12 m6" paddingLeft="0">
                            <m:MaterialTextBox label="{msg.labelPrefix}" ui:field="prefix"/>
                            <m:MaterialTextBox label="{msg.labelSuffix}" ui:field="suffix"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialColumn>

                <!--company-->
                <m:MaterialColumn grid="s12 m4">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="BUSINESS" iconColor="BLUE" float="LEFT" marginRight="5"
                                        marginTop="-3"/>
                        <m:MaterialTitle description="Company" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="{msg.labelBusinessName}" ui:field="businessName"/>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12 m6" paddingLeft="0">
                            <m:MaterialTextBox label="Company ID" ui:field="companyId"/>
                            <m:MaterialTextBox label="TAX ID" ui:field="taxId"/>
                            <m:MaterialTextBox label="VAT ID" ui:field="vatId"/>
                            <m:MaterialRow marginBottom="0" paddingTop="20">
                                <m:MaterialSwitch onLabel="VAT payer" grid="10" ui:field="vatPayer" paddingLeft="0"
                                                  marginLeft="-10"/>
                            </m:MaterialRow>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialColumn>

                <!--contacts-->
                <m:MaterialColumn grid="s12 m2">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="EMAIL" iconColor="BLUE" float="LEFT" marginRight="5" marginTop="-3"/>
                        <m:MaterialTitle description="Contacts" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="{msg.labelPhone}" ui:field="phone"/>
                    <m:MaterialTextBox label="{msg.labelEmail}" ui:field="email"/>
                    <m:MaterialTextBox label="{msg.labelCcEmail}" ui:field="ccEmail"/>
                </m:MaterialColumn>

                <!--invoicing info-->
                <m:MaterialColumn grid="s12 m2">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="EMAIL" iconColor="BLUE" float="LEFT" marginRight="5" marginTop="-3"/>
                        <m:MaterialTitle description="Additional info" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="Due date days" ui:field="numberOfDays"/>
                </m:MaterialColumn>
            </m:MaterialRow>
        </m:MaterialPanel>

        <m:MaterialPanel shadow="1" marginLeft="20" marginRight="20" marginTop="20" paddingTop="5">
            <m:MaterialRow marginBottom="0" paddingTop="20">
                <m:MaterialSwitch onLabel="Postal address same" grid="10" ui:field="postalSame"/>
            </m:MaterialRow>

            <m:MaterialRow paddingLeft="10" marginTop="0">
                <!--invoice address-->
                <m:MaterialColumn grid="s12 m6">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="HOME" iconColor="BLUE" float="LEFT" marginRight="5" marginTop="-3"/>
                        <m:MaterialTitle description="Invoice address" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="Street" ui:field="street"/>
                    <m:MaterialTextBox label="City" ui:field="city"/>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12 m6" paddingLeft="0">
                            <m:MaterialTextBox label="Post code" ui:field="postCode"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                    <m:MaterialTextBox label="Country" ui:field="country"/>
                </m:MaterialColumn>

                <!-- postal address-->
                <m:MaterialColumn grid="s12 m6">
                    <m:MaterialSection paddingTop="0" paddingBottom="0">
                        <m:MaterialIcon iconType="HOME" iconColor="BLUE" float="LEFT" marginRight="5" marginTop="-3"/>
                        <m:MaterialTitle description="Postal address" textColor="BLUE"/>
                    </m:MaterialSection>

                    <m:MaterialTextBox label="Street" ui:field="postalStreet"/>
                    <m:MaterialTextBox label="City" ui:field="postalCity"/>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12 m6" paddingLeft="0">
                            <m:MaterialTextBox label="Post code" ui:field="postalPostCode"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                    <m:MaterialTextBox label="Country" ui:field="postalCountry"/>
                </m:MaterialColumn>
            </m:MaterialRow>
        </m:MaterialPanel>

        <m:MaterialRow paddingLeft="20" float="LEFT">
            <m:MaterialButton ui:field="btnSave" marginRight="10" type="FLAT" waves="DEFAULT" backgroundColor="BLUE"
                              textColor="WHITE" iconType="CHECK" tooltip="{msg.tooltipSaveContact}"
                              text="{msg.labelSave}"/>
            <m:MaterialButton ui:field="btnBack" marginRight="10" type="FLAT" waves="DEFAULT" backgroundColor="WHITE"
                              textColor="DEFAULT" iconType="ARROW_BACK" tooltip="{msg.tooltipBack}"
                              text="{msg.labelBack}"/>
        </m:MaterialRow>

    </g:HTMLPanel>
</ui:UiBinder>